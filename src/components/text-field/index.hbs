<div class="vertical textField">
    <div>
        <label for="{{name}}" class="label">{{helper}}</label>
        <input
            type="{{type}}"
            id="{{id}}"
            name="{{name}}"
            placeholder="{{helper}}"
            required
            class="input"
            pattern="{{pattern}}"
        />
    </div>
    <div class="error-message">{{error}}</div>
</div>