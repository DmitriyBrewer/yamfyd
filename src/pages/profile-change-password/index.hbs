{{#> ProfileRoot}}
    {{>ProfilePrev href='/profile' src='/assets/arrow-left.svg' alt='prev'}}
        {{#> ProfileContent isForm='true'}}
        {{> ProfileHeader}}

        {{#> ProfileParams}}
            {{#> ProfileParam param='Старый пароль' input='true'}}
                {{> Input dir='rtl' type='password' id='oldPassword' name='oldPassword' placeholder='Старый пароль' className='profileChangeData__input' autocomplete='current-password'}}
            {{/ ProfileParam}}

            {{#> ProfileParam param='Новый пароль' input='true'}}
                {{> Input dir='rtl' type='password' id='newPassword' name='newPassword' placeholder='Новый пароль' className='profileChangeData__input' autocomplete='current-password'}}
            {{/ ProfileParam}}

            {{#> ProfileParam param='Повторите новый пароль' input='true'}}
                {{> Input dir='rtl' type='password' id='newPassword2' name='newPassword' placeholder='Повторите новый пароль' className='profileChangeData__input' autocomplete='current-password'}}
            {{/ ProfileParam}}

        {{/ ProfileParams}}

        {{> Button type='submit' text='Сохранить' className='profileChangePassword__button'}}

{{/ ProfileContent}}

{{/ ProfileRoot}}
